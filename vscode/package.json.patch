# 在 view/title menus 中添加（在 spring.configuration.refresh 之后）:

        {
          "command": "spring.components.selectViewMode",
          "when": "view == spring.components",
          "group": "navigation@1"
        },
        {
          "command": "spring.routes.selectViewMode",
          "when": "view == spring.routes",
          "group": "navigation@1"
        },
        {
          "command": "spring.configurations.selectViewMode",
          "when": "view == spring.configurations",
          "group": "navigation@1"
        }

# 在 configuration 部分添加（在 properties 中）:

        "spring-lsp.componentsViewMode": {
          "type": "string",
          "enum": ["list", "tree"],
          "default": "list",
          "enumDescriptions": [
            "Flat list view - show all components directly",
            "Tree view - group components by file"
          ],
          "description": "View mode for Components view"
        },
        "spring-lsp.routesViewMode": {
          "type": "string",
          "enum": ["list", "tree"],
          "default": "list",
          "enumDescriptions": [
            "List view - group routes by HTTP method",
            "Tree view - group routes by file"
          ],
          "description": "View mode for Routes view"
        },
        "spring-lsp.configurationsViewMode": {
          "type": "string",
          "enum": ["list", "tree"],
          "default": "list",
          "enumDescriptions": [
            "List view - group configurations by section",
            "Tree view - group configurations by file"
          ],
          "description": "View mode for Configurations view"
        }
